{
	"rules": {
		"align": [
			true,
			"parameters",
			"statements"
		],
		"adjacent-overload-signatures": true,
		"class-name": true,
		"curly": true,
		"import-blacklist": [
			true,
			"rxjs"
		],
		"no-duplicate-imports": true,
		"no-duplicate-variable": true,
		"no-misused-new": true,
		"no-non-null-assertion": true,
		"no-shadowed-variable": true,
		"no-unnecessary-callback-wrapper": true,
		"no-use-before-declare": true,
		"no-var-keyword": true,
		"semicolon": [
			true,
			"always",
			"strict-bound-class-methods"
		],
		"space-before-function-paren": [
			true,
			{
				"anonymous": "always",
				"named": "never",
				"asyncArrow": "always"
			}
		],
		"trailing-comma": [
			true,
			{
				"multiline": "never",
				"singleline": "never"
			}
		],
		"use-default-type-parameter": true,
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-module",
			"check-separator",
			"check-rest-spread",
			"check-type",
			"check-type-operator",
			"check-preblock"
		]
	},
	"rulesDirectory": [
		"node_modules/tslint-eslint-rules/dist/rules"
	]
}
